source 'https://rubygems.org'

gem 'rails', '3.2.7'

# test
group :development, :test do
  gem 'rspec-rails', '~> 2.0'
  gem 'fabrication'
  gem 'jasmine'
end

group :development do
  gem 'spork'
  gem 'simplecov'
end

# db
group :development do
   gem 'sqlite3'
end
group :production, :test do
  gem 'mysql2'
end

# assets
group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'twitter-bootstrap-rails'

# utils
gem 'rails_config'
gem 'romankana'

# for external web service
gem 'fb_graph'
gem 'youtube_search'
gem 'yacan'
gem 'simple-rss'
gem 'nokogiri'
